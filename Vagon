package MetroMadrid;

public class Vagon {
private int matricula_vagon;
private int modelo;
private int cantidadvagones;
private int puertas;
public Vagon(int matricula_vagon, int modelo) {
	super();
	this.matricula_vagon = matricula_vagon;
	this.modelo = modelo;
	this.cantidadvagones = cantidadvagones;
}
public int getMatricula_vagon() {
	return matricula_vagon;
}
public void setMatricula_vagon(int matricula_vagon) {
	this.matricula_vagon = matricula_vagon;
}
public int getModelo() {
	return modelo;
}
public void setModelo(int modelo) {
	this.modelo = modelo;
}
public void getCantidadpasajerosypuertas() {
	//esto sera dependiente de que sea tren
	int cantidadpasajeros = 0;
	int cantidadpuertas = 0;
	if(modelo==2000) {
		cantidadpasajeros=20;
		cantidadpuertas=4;
	}
	else if(modelo==2007) {
		cantidadpasajeros=28;
	}
	else if(modelo==2008) {
		cantidadpuertas=6;
	}
	System.out.println(" La cantidad de pasajeros disponible por vagon es: "+cantidadpasajeros
			+"\n----------------------------"
			+ "\n La cantidad de puertas por vagon es: " +cantidadpuertas);
	
}
public int getCantidadvagones(Lineas lineas) {
	if(lineas.getTipoliea().contains("normal")) {
		cantidadvagones=10;
	}
	else if(lineas.getTipoliea().contains("ligero")) {
		cantidadvagones=3;
	}
	return  cantidadvagones;
}
public void setCantidadvagones(int cantidadvagones) {
	this.cantidadvagones = cantidadvagones;
}
}
