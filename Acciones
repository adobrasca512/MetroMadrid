package MetroMadrid;

import java.util.ArrayList;
import java.util.ListIterator;

public class Acciones {
private String movimiento;
private String movimientopuertas;
public Acciones( String movimiento, String movimientopuertas) {
	super();
	this.movimiento = movimiento;
	
	this.movimientopuertas = movimientopuertas;
}
public String getMovimiento(Conductor conductor,Trabajador trabajadores, Empleo empleo) {
	boolean conductorexist=conductor.getConductor(empleo);
	boolean encendido=conductor.isEncendidotren();
	if(conductorexist=true && (encendido=true)) {
	
		
		switch(movimiento) {
		case ("movimiento"): 
			System.out.println("estado de metro: movimiento");
			break;
		case("detenido"): 
			System.out.println("estado de metro: detenido");
			break;
		
		}
		
	}
	else {
		switch(movimiento) {
		default:
			System.out.println("estado de metro: detenido (no posee conductor)");
		
		}
	}
		
		
	return movimiento;
}
public void setMovimiento(String movimiento) {
	this.movimiento = movimiento;
}
public String getMovimientopuertas() {
	System.out.println("puertas: " +movimientopuertas);
	return movimientopuertas;
}
public void setMovimientopuertas(String movimientopuertas) {
	this.movimientopuertas = movimientopuertas;
}


}
